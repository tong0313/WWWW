<Window x:Class="silder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:silder"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="20" Width="400">

            <Canvas   Background="LightGreen" >
                <Border CornerRadius="10" Background="LightSkyBlue" Height="50" Width="100"  >
                    <TextBlock  x:Name="HeightNumber" TextAlignment="Center" Height="42" Padding="0 10" >100</TextBlock>
                </Border>
            </Canvas>
           <Slider Minimum="0" Maximum="200" x:Name="HeightSlider" ValueChanged="HeightSlider_ValueChanged"></Slider>
        </StackPanel>
        <TextBlock FontSize="40">29</TextBlock >
        <TextBlock FontSize="8" >.5</TextBlock>
    </Grid>
</Window>
